<%= turbo_frame_tag item do %>
  <%= form_with model: item do |form| %>
    <div class="flex items-center">
      <%= form.text_field :text, class: "border border-gray-300 rounded-lg px-3 py-2 w-96", placeholder: "Enter new item" %>
      <%= form.submit "Create", class: "bg-blue-500 text-white px-3 py-2 rounded-lg ml-2" %>
    </div>
  <% end %>
<% end %>